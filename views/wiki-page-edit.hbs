<div class="wiki-page">
	{{> toolbar }}
	<div class="flex-wrapper">
		<div class="content">
			<div class="title">
				<h2>{{ title }}</h2>
			</div>

			<div id="edit-entry">
				<form class="edit-entry" action="{{ route }}/edit" method="post">
					<textarea name="content">{{{ markdown }}}</textarea>
					<input type="submit" name="submit" value="Save">
				</form>

			</div>
		</div>
	</div>
</div>
